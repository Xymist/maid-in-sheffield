<div class="container content">
<h1>Add CV</h1>

<%= form_for @cv do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :cv %>
      <%= f.file_field :cv, required: true %>
    </div>

    <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
<% end %>

</div>