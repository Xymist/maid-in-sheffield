<div class="container">
<h1>Listing homes</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Bronze price</th>
      <th>Silver price</th>
      <th>Gold price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.size %></td>
        <td><%= home.bronze_price %></td>
        <td><%= home.silver_price %></td>
        <td><%= home.gold_price %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home', new_home_path %><br>
</div>