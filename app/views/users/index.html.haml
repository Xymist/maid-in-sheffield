.container
  %h1 Listing Users

.container.content
  %table
    %thead
      %tr
        %th ID
        %th Email
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td=user.id
          %td=user.email
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
