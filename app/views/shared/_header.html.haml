#floatheader.header
  .navbar.navbar-default{:role => 'navigation'}
    .container
      .topbar
        .col-xs-2
          = link_to(image_tag('MIS_Banner_notSoSmall.png', alt: 'Logo'), root_path, id: 'biglogo')
          = link_to(image_tag('mis-banner-small.png', alt: 'Logo'), root_path, id: 'smalllogo')

        .col-xs-10
          %ul.loginbar.pull-right
            %li.topbar-devider
            %li= link_to 'FAQ', faq_path
            %li.topbar-devider
            %li= link_to 'Contact Us', contact_path
            %li.topbar-devider
            - if user_signed_in?
              %li= current_user.email
              %li= link_to('Edit Profile', edit_user_registration_path)
              %li= link_to('Log Out', destroy_user_session_path, method: :delete)
            - else
              %li= link_to('Client Login', new_user_session_path)

      .navbar-header
        %button.navbar-toggle{:type => 'button', :data => {:toggle => 'collapse', :target => '.navbar-responsive-collapse'}}
          %span.sr-only Toggle navigation
          %span.fa.fa-bars/

      .collapse.navbar-collapse.navbar-responsive-collapse
        .col-xs-9
          %ul.nav.navbar-nav
            %li= link_to 'About Us', about_us_path
            %li= link_to 'Testimonials', testimonials_path
            %li= link_to 'Services & Pricing', price_grid_path
            %li= link_to 'Student Deal', student_pack_path

        .col-xs-1
          =link_to('BOOK NOW!', booking_form_path, :type => 'button', :class => 'btn btn-success', :id => 'bookbuttonheader')